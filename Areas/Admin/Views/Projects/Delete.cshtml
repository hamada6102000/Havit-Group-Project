@model HavitGroup.Models.Project
@{
    ViewData["Title"] = "Delete Project";
}

<h1 class="mb-4">Delete Project</h1>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this project?</h4>
    <p>This action cannot be undone. The project image will also be deleted.</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Project Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Brand:</dt>
                    <dd class="col-sm-9">@Model.Brand</dd>
                    
                    <dt class="col-sm-3">Title:</dt>
                    <dd class="col-sm-9">@Model.Title</dd>
                    
                    <dt class="col-sm-3">Location:</dt>
                    <dd class="col-sm-9">@Model.Location, @Model.Country</dd>
                    
                    <dt class="col-sm-3">Year:</dt>
                    <dd class="col-sm-9">@Model.Year</dd>
                    
                    <dt class="col-sm-3">Category:</dt>
                    <dd class="col-sm-9">@Model.Category</dd>
                    
                    <dt class="col-sm-3">Status:</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </dd>
                </dl>
            </div>
            <div class="card-footer">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Project Image</h5>
            </div>
            <div class="card-body text-center">
                <img src="@Model.ImagePath" alt="@Model.Title" class="img-fluid">
            </div>
        </div>
    </div>
</div>

