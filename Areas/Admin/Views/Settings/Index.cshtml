@model HavitGroup.Models.SiteSettings
@{
    ViewData["Title"] = "Site Settings";
}

<h1 class="mb-4">Site Settings</h1>
<p class="text-muted">Manage all displayed data on your website including contact information, company details, and page content.</p>

<form asp-action="Index" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CreatedAt" />

    <!-- Contact Information Section -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Contact Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Phone" class="form-label"></label>
                    <input asp-for="Phone" class="form-control" placeholder="+1 (555) 123-4567" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Mobile" class="form-label"></label>
                    <input asp-for="Mobile" class="form-control" placeholder="+1 (555) 987-6543" />
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <!-- Address Information Section -->
    <div class="card mb-4">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Address Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12 mb-3">
                    <label asp-for="AddressLine1" class="form-label"></label>
                    <input asp-for="AddressLine1" class="form-control" placeholder="123 Business Street" />
                    <span asp-validation-for="AddressLine1" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 mb-3">
                    <label asp-for="AddressLine2" class="form-label"></label>
                    <input asp-for="AddressLine2" class="form-control" placeholder="Suite 100" />
                    <span asp-validation-for="AddressLine2" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="City" class="form-label"></label>
                    <input asp-for="City" class="form-control" placeholder="City" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="State" class="form-label"></label>
                    <input asp-for="State" class="form-control" placeholder="State" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="PostalCode" class="form-label"></label>
                    <input asp-for="PostalCode" class="form-control" placeholder="12345" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 mb-3">
                    <label asp-for="Country" class="form-label"></label>
                    <input asp-for="Country" class="form-control" placeholder="Country" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <!-- Location Section Settings -->
    <div class="card mb-4">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0">Location Section (Contact Page)</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12 mb-3">
                    <label asp-for="LocationHeading" class="form-label"></label>
                    <input asp-for="LocationHeading" class="form-control" placeholder="Our Location" />
                    <small class="form-text text-muted">Main heading for the location section on contact page</small>
                    <span asp-validation-for="LocationHeading" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 mb-3">
                    <label asp-for="LocationSubheading" class="form-label"></label>
                    <input asp-for="LocationSubheading" class="form-control" placeholder="Visit our headquarters in the heart of New York City" />
                    <small class="form-text text-muted">Subheading text displayed below the main heading</small>
                    <span asp-validation-for="LocationSubheading" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <!-- Company Information Section -->
    <div class="card mb-4">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">Company Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12 mb-3">
                    <label asp-for="CompanyName" class="form-label"></label>
                    <input asp-for="CompanyName" class="form-control" placeholder="Your Company Name" />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 mb-3">
                    <label asp-for="Tagline" class="form-label"></label>
                    <input asp-for="Tagline" class="form-control" placeholder="Your company tagline or slogan" />
                    <span asp-validation-for="Tagline" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 mb-3">
                    <label asp-for="FooterDescription" class="form-label"></label>
                    <textarea asp-for="FooterDescription" class="form-control" rows="3" placeholder="Leading the way in innovation and excellence. Building sustainable solutions for tomorrow's challenges."></textarea>
                    <span asp-validation-for="FooterDescription" class="text-danger"></span>
                    <small class="form-text text-muted">This text appears in the footer under the company name.</small>
                </div>
            </div>
        </div>
    </div>

    <!-- About Page Content Section -->
    <div class="card mb-4">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0">About Page Content</h5>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="Mission" class="form-label"></label>
                <textarea asp-for="Mission" class="form-control" rows="4" placeholder="Enter your company mission statement"></textarea>
                <span asp-validation-for="Mission" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Values" class="form-label"></label>
                <textarea asp-for="Values" class="form-control" rows="4" placeholder="Enter your company values"></textarea>
                <span asp-validation-for="Values" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="WhyChooseUs" class="form-label"></label>
                <textarea asp-for="WhyChooseUs" class="form-control" rows="4" placeholder="Enter why customers should choose your company"></textarea>
                <span asp-validation-for="WhyChooseUs" class="text-danger"></span>
            </div>
        </div>
    </div>

    <!-- Social Media Links Section -->
    <div class="card mb-4">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0">Social Media Links</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="FacebookUrl" class="form-label"></label>
                    <input asp-for="FacebookUrl" class="form-control" type="url" placeholder="https://facebook.com/yourpage" />
                    <span asp-validation-for="FacebookUrl" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="TwitterUrl" class="form-label"></label>
                    <input asp-for="TwitterUrl" class="form-control" type="url" placeholder="https://twitter.com/yourhandle" />
                    <span asp-validation-for="TwitterUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="LinkedInUrl" class="form-label"></label>
                    <input asp-for="LinkedInUrl" class="form-control" type="url" placeholder="https://linkedin.com/company/yourcompany" />
                    <span asp-validation-for="LinkedInUrl" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="InstagramUrl" class="form-label"></label>
                    <input asp-for="InstagramUrl" class="form-control" type="url" placeholder="https://instagram.com/yourhandle" />
                    <span asp-validation-for="InstagramUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="YouTubeUrl" class="form-label"></label>
                    <input asp-for="YouTubeUrl" class="form-control" type="url" placeholder="https://youtube.com/yourchannel" />
                    <span asp-validation-for="YouTubeUrl" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary btn-lg">Save Settings</button>
        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

