@{
    ViewData["Title"] = "Dashboard";
}

<h1 class="mb-4">Admin Dashboard</h1>

<div class="row">
    <div class="col-md-3 mb-4">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h5 class="card-title">Total Messages</h5>
                <h2 class="card-text">@ViewBag.TotalMessages</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <h5 class="card-title">Unread Messages</h5>
                <h2 class="card-text">@ViewBag.UnreadMessages</h2>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Quick Actions</h5>
            </div>
            <div class="card-body">
                <a asp-controller="Messages" asp-action="Index" class="btn btn-primary mb-2 w-100">View Messages</a>
                <a asp-controller="HomeImages" asp-action="Index" class="btn btn-info mb-2 w-100">Manage Home Images</a>
                <a asp-controller="AboutImages" asp-action="Index" class="btn btn-info mb-2 w-100">Manage About Images</a>
                <a asp-controller="ServiceImages" asp-action="Index" class="btn btn-info mb-2 w-100">Manage Service Images</a>
                <a asp-controller="Settings" asp-action="Index" class="btn btn-warning w-100">Site Settings</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>System Information</h5>
            </div>
            <div class="card-body">
                <p><strong>Server Time:</strong> @DateTime.Now.ToString("F")</p>
                <p><strong>Environment:</strong> @Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT")</p>
            </div>
        </div>
    </div>
</div>

