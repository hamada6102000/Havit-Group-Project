@model HavitGroup.Models.ContactMessage
@{
    ViewData["Title"] = "Message Details";
}

<h1 class="mb-4">Message Details</h1>

<div class="card">
    <div class="card-header">
        <h5>Message Information</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9">@Model.Name</dd>
            
            <dt class="col-sm-3">Email:</dt>
            <dd class="col-sm-9">
                <a href="mailto:@Model.Email">@Model.Email</a>
            </dd>
            
            <dt class="col-sm-3">Subject:</dt>
            <dd class="col-sm-9">@Model.Subject</dd>
            
            <dt class="col-sm-3">Submitted At:</dt>
            <dd class="col-sm-9">@Model.SubmittedAt.ToString("F")</dd>
            
            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9">
                @if (Model.IsRead)
                {
                    <span class="badge bg-success">Read</span>
                }
                else
                {
                    <span class="badge bg-warning">Unread</span>
                }
            </dd>
            
            @if (!string.IsNullOrEmpty(Model.AttachmentPath))
            {
                <dt class="col-sm-3">Attachment:</dt>
                <dd class="col-sm-9">
                    <a href="@Model.AttachmentPath" target="_blank" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-download"></i> @Model.OriginalFileName
                    </a>
                </dd>
            }
        </dl>
        
        <hr />
        
        <h5>Message:</h5>
        <div class="border p-3 bg-light">
            <p style="white-space: pre-wrap;">@Model.Message</p>
        </div>
    </div>
    <div class="card-footer">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        <form asp-action="ToggleRead" asp-route-id="@Model.Id" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-warning">
                @(Model.IsRead ? "Mark Unread" : "Mark Read")
            </button>
        </form>
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this message?');">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>

