@model List<HavitGroup.Models.Testimonial>
@{
    ViewData["Title"] = "Testimonials";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Testimonials Management</h1>
    <a asp-action="Create" class="btn btn-primary">Add New Testimonial</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var testimonial in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="fas fa-star @(i <= testimonial.Rating ? "text-warning" : "text-muted")"></i>
                                }
                            </div>
                            <span class="badge @(testimonial.IsActive ? "bg-success" : "bg-secondary")">
                                @(testimonial.IsActive ? "Active" : "Inactive")
                            </span>
                        </div>
                        <p class="card-text fst-italic mb-3">"@testimonial.Text"</p>
                        <hr>
                        <div class="mt-3">
                            <h6 class="card-title mb-1">@testimonial.ClientName</h6>
                            @if (!string.IsNullOrEmpty(testimonial.ClientTitle))
                            {
                                <p class="card-text text-muted small mb-1">@testimonial.ClientTitle</p>
                            }
                            <p class="card-text text-success small mb-0">@testimonial.CompanyName</p>
                        </div>
                        <small class="text-muted">
                            <strong>Display Order:</strong> @testimonial.DisplayOrder<br>
                            <strong>Created:</strong> @testimonial.CreatedAt.ToString("g")
                        </small>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@testimonial.Id" class="btn btn-sm btn-info flex-grow-1">View</a>
                            <a asp-action="Edit" asp-route-id="@testimonial.Id" class="btn btn-sm btn-warning flex-grow-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@testimonial.Id" class="btn btn-sm btn-danger flex-grow-1">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>No testimonials found.</h4>
        <p>Get started by creating your first testimonial.</p>
        <a asp-action="Create" class="btn btn-primary">Create Testimonial</a>
    </div>
}

