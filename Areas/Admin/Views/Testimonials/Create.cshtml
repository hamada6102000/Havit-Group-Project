@model HavitGroup.Models.Testimonial
@{
    ViewData["Title"] = "Create Testimonial";
}

<h1 class="mb-4">Create New Testimonial</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Text" class="form-label">Testimonial Text <span class="text-danger">*</span></label>
                        <textarea asp-for="Text" class="form-control" rows="5" placeholder="Enter the client's testimonial quote"></textarea>
                        <small class="form-text text-muted">The testimonial quote that will be displayed</small>
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="ClientName" class="form-label">Client Name <span class="text-danger">*</span></label>
                        <input asp-for="ClientName" class="form-control" placeholder="e.g., Sarah Mitchell" />
                        <span asp-validation-for="ClientName" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="ClientTitle" class="form-label">Client Title</label>
                        <input asp-for="ClientTitle" class="form-control" placeholder="e.g., CEO, Grand Plaza Hotel" />
                        <small class="form-text text-muted">Optional: Client's professional title or role</small>
                        <span asp-validation-for="ClientTitle" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="CompanyName" class="form-label">Company Name <span class="text-danger">*</span></label>
                        <input asp-for="CompanyName" class="form-control" placeholder="e.g., Grand Plaza Hotel Group" />
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Rating" class="form-label">Rating <span class="text-danger">*</span></label>
                        <select asp-for="Rating" class="form-select">
                            <option value="1">1 Star</option>
                            <option value="2">2 Stars</option>
                            <option value="3">3 Stars</option>
                            <option value="4">4 Stars</option>
                            <option value="5" selected>5 Stars</option>
                        </select>
                        <small class="form-text text-muted">Rating from 1 to 5 stars</small>
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="DisplayOrder" class="form-label">Display Order</label>
                        <input asp-for="DisplayOrder" class="form-control" type="number" value="0" min="0" />
                        <small class="form-text text-muted">Lower numbers appear first</small>
                    </div>
                    
                    <div class="mb-3 form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                        <label asp-for="IsActive" class="form-check-label">
                            Active (visible on website)
                        </label>
                    </div>
                    
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Create</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

