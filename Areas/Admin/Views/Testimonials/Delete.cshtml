@model HavitGroup.Models.Testimonial
@{
    ViewData["Title"] = "Delete Testimonial";
}

<h1 class="mb-4">Delete Testimonial</h1>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this testimonial?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-header">
        <h5>Testimonial Information</h5>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <strong>Rating:</strong>
            @for (int i = 1; i <= 5; i++)
            {
                <i class="fas fa-star @(i <= Model.Rating ? "text-warning" : "text-muted")"></i>
            }
        </div>
        <dl class="row">
            <dt class="col-sm-3">Testimonial:</dt>
            <dd class="col-sm-9"><em>"@Model.Text"</em></dd>
            
            <dt class="col-sm-3">Client Name:</dt>
            <dd class="col-sm-9">@Model.ClientName</dd>
            
            <dt class="col-sm-3">Company Name:</dt>
            <dd class="col-sm-9">@Model.CompanyName</dd>
            
            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9">
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactive</span>
                }
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

