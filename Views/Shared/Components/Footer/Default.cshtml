@model HavitGroup.Models.SiteSettings

@{
    // Default values if settings are null
    var footerDescription = Model?.FooterDescription ?? "Leading the way in innovation and excellence. Building sustainable solutions for tomorrow's challenges.";
    var email = Model?.Email ?? "info@nexusgroup.com";
    var phone = Model?.Phone ?? "+1 (555) 123-4567";
    var addressLine1 = Model?.AddressLine1;
    var addressLine2 = Model?.AddressLine2;
    var city = Model?.City;
    var state = Model?.State;
    var postalCode = Model?.PostalCode;
    
    // Social media links
    var facebookUrl = Model?.FacebookUrl ?? "#";
    var twitterUrl = Model?.TwitterUrl ?? "#";
    var linkedInUrl = Model?.LinkedInUrl ?? "#";
    var instagramUrl = Model?.InstagramUrl ?? "#";
}

<footer class="text-light mt-5 py-5" style="background-color: rgb(41, 78, 52);">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 mb-4 mb-lg-0">
                <h5 class="fw-bold mb-3">Havit Group</h5>
                <p class="text-light">@footerDescription</p>
            </div>
            <div class="col-lg-2 mb-4 mb-lg-0">
                <h6 class="fw-bold mb-3">Quick Links</h6>
                <ul class="list-unstyled">
                    <li class="mb-2"><a asp-controller="Home" asp-action="About" class="text-light text-decoration-none">About Us</a></li>
                    <li class="mb-2"><a asp-controller="Home" asp-action="Services" class="text-light text-decoration-none">Our Services</a></li>
                    <li class="mb-2"><a href="#" class="text-light text-decoration-none">Careers</a></li>
                    <li class="mb-2"><a href="#" class="text-light text-decoration-none">Privacy Policy</a></li>
                    <li class="mb-2"><a asp-controller="Home" asp-action="Contact" class="text-light text-decoration-none">Contact</a></li>
                </ul>
            </div>
            <div class="col-lg-3 mb-4 mb-lg-0">
                <h6 class="fw-bold mb-3">Contact Info</h6>
                @if (!string.IsNullOrEmpty(addressLine1) || !string.IsNullOrEmpty(city))
                {
                    <p class="text-light mb-2">
                        <i class="fas fa-map-marker-alt me-2"></i>
                        @if (!string.IsNullOrEmpty(addressLine1))
                        {
                            @addressLine1
                            @if (!string.IsNullOrEmpty(addressLine2))
                            {
                                <br><span class="ms-4">@addressLine2</span>
                            }
                            @if (!string.IsNullOrEmpty(city) || !string.IsNullOrEmpty(state) || !string.IsNullOrEmpty(postalCode))
                            {
                                <br><span class="ms-4">@(string.Join(", ", new[] { city, state, postalCode }.Where(s => !string.IsNullOrEmpty(s))))</span>
                            }
                        }
                        else if (!string.IsNullOrEmpty(city) || !string.IsNullOrEmpty(state) || !string.IsNullOrEmpty(postalCode))
                        {
                            @(string.Join(", ", new[] { city, state, postalCode }.Where(s => !string.IsNullOrEmpty(s))))
                        }
                    </p>
                }
                @if (!string.IsNullOrEmpty(phone))
                {
                    <p class="text-light mb-2">
                        <i class="fas fa-phone me-2"></i><a href="tel:@phone" class="text-light text-decoration-none">@phone</a>
                    </p>
                }
                @if (!string.IsNullOrEmpty(email))
                {
                    <p class="text-light mb-0">
                        <i class="fas fa-envelope me-2"></i><a href="mailto:@email" class="text-light text-decoration-none">@email</a>
                    </p>
                }
            </div>
            <div class="col-lg-3">
                <h6 class="fw-bold mb-3">Follow Us</h6>
                <div class="social-links">
                    @if (!string.IsNullOrEmpty(facebookUrl) && facebookUrl != "#")
                    {
                        <a href="@facebookUrl" target="_blank" rel="noopener noreferrer" class="text-light me-3"><i class="fab fa-facebook fa-lg"></i></a>
                    }
                    @if (!string.IsNullOrEmpty(twitterUrl) && twitterUrl != "#")
                    {
                        <a href="@twitterUrl" target="_blank" rel="noopener noreferrer" class="text-light me-3"><i class="fab fa-twitter fa-lg"></i></a>
                    }
                    @if (!string.IsNullOrEmpty(linkedInUrl) && linkedInUrl != "#")
                    {
                        <a href="@linkedInUrl" target="_blank" rel="noopener noreferrer" class="text-light me-3"><i class="fab fa-linkedin fa-lg"></i></a>
                    }
                    @if (!string.IsNullOrEmpty(instagramUrl) && instagramUrl != "#")
                    {
                        <a href="@instagramUrl" target="_blank" rel="noopener noreferrer" class="text-light"><i class="fab fa-instagram fa-lg"></i></a>
                    }
                </div>
            </div>
        </div>
        <hr class="my-4 bg-secondary">
        <div class="text-center">
            <p class="mb-0 text-light">&copy; 2025 Havit Group. All rights reserved.</p>
        </div>
    </div>
</footer>

