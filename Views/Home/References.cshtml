@{
    ViewData["Title"] = "References";
}

<!-- Hero Image Carousel Section -->
@{
    var referencesImages = ViewBag.ReferencesImages as List<HavitGroup.Models.ReferencesImage>;
}
@if (referencesImages != null && referencesImages.Any())
{
    <section class="hero-carousel-section mb-5">
        <div id="referencesCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="3000" data-bs-wrap="true">
            <div class="carousel-inner">
                @for (int i = 0; i < referencesImages.Count; i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <img src="@referencesImages[i].ImagePath" class="d-block w-100 carousel-image" alt="@(referencesImages[i].AltText ?? "Havit Group")">
                        @if (!string.IsNullOrWhiteSpace(referencesImages[i].AltText))
                        {
                            <div class="carousel-caption">
                                <h5>@referencesImages[i].AltText</h5>
                            </div>
                        }
                    </div>
                }
            </div>
            @if (referencesImages.Count > 1)
            {
                <button class="carousel-control-prev" type="button" data-bs-target="#referencesCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#referencesCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            }
        </div>
    </section>
}

<!-- Statistics Section -->
@{
    var statistics = ViewBag.Statistics as HavitGroup.Models.Statistics;
    var completedProjects = statistics?.CompletedProjects ?? 500;
    var countriesServed = statistics?.CountriesServed ?? 45;
    var happyClients = statistics?.HappyClients ?? 1000;
    var satisfactionRate = statistics?.SatisfactionRate ?? 98;
}
<section class="statistics-section mb-5 py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-6 col-lg-3">
                <div class="stat-card text-center p-4 h-100">
                    <div class="stat-number mb-2" data-target="@completedProjects">0</div>
                    <div class="stat-label">Completed Projects</div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="stat-card text-center p-4 h-100">
                    <div class="stat-number mb-2" data-target="@countriesServed">0</div>
                    <div class="stat-label">Countries Served</div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="stat-card text-center p-4 h-100">
                    <div class="stat-number mb-2" data-target="@happyClients">0</div>
                    <div class="stat-label">Happy Clients</div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="stat-card text-center p-4 h-100">
                    <div class="stat-number mb-2" data-target="@satisfactionRate">0</div>
                    <div class="stat-label">Satisfaction Rate</div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Projects Section -->
@{
    var projects = ViewBag.Projects as List<HavitGroup.Models.Project>;
}
<section class="featured-projects-section mb-5 py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-3">Featured Projects</h2>
            <p class="lead text-muted">A showcase of our successful furniture solutions across various sectors</p>
        </div>
        @if (projects != null && projects.Any())
        {
            <div class="row g-4">
                @foreach (var project in projects)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="project-card h-100">
                            <div class="project-image-wrapper">
                                <img src="@project.ImagePath" class="project-image" alt="@project.Title">
                                <div class="brand-tag">@project.Brand</div>
                            </div>
                            <div class="project-content p-4">
                                <h3 class="project-title mb-3">@project.Title</h3>
                                <div class="project-meta mb-3">
                                    <div class="meta-item mb-2">
                                        <i class="fas fa-map-marker-alt me-2"></i>
                                        <span>@project.Location, @project.Country</span>
                                    </div>
                                    <div class="meta-item mb-2">
                                        <i class="fas fa-calendar me-2"></i>
                                        <span>@project.Year</span>
                                    </div>
                                </div>
                                <div class="category-tag mb-3">@project.Category</div>
                                <p class="project-description mb-0">@project.Description</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <p class="text-muted">No projects available at the moment.</p>
            </div>
        }
    </div>
</section>

<!-- Client Testimonials Section -->
@{
    var testimonials = ViewBag.Testimonials as List<HavitGroup.Models.Testimonial>;
}
@if (testimonials != null && testimonials.Any())
{
    <section class="testimonials-section mb-5 py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold mb-3">Client Testimonials</h2>
                <p class="lead text-muted">What our clients say about working with us</p>
            </div>
            <div id="testimonialsCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
                <div class="carousel-inner">
                    @{
                        int itemsPerSlide = 3;
                        int totalSlides = (int)Math.Ceiling((double)testimonials.Count / itemsPerSlide);
                    }
                    @for (int slideIndex = 0; slideIndex < totalSlides; slideIndex++)
                    {
                        <div class="carousel-item @(slideIndex == 0 ? "active" : "")">
                            <div class="row justify-content-center">
                                @{
                                    int startIndex = slideIndex * itemsPerSlide;
                                    int endIndex = Math.Min(startIndex + itemsPerSlide - 1, testimonials.Count - 1);
                                    int itemsInThisSlide = endIndex - startIndex + 1;
                                }
                                @for (int j = startIndex; j <= endIndex; j++)
                                {
                                    var item = testimonials[j];
                                    <div class="col-md-@(itemsInThisSlide == 1 ? "12" : itemsInThisSlide == 2 ? "6" : "4") mb-4">
                                        <div class="testimonial-card h-100">
                                            <div class="testimonial-header">
                                                <div class="testimonial-stars">
                                                    @for (int k = 1; k <= 5; k++)
                                                    {
                                                        <i class="fas fa-star @(k <= item.Rating ? "text-warning" : "text-muted")"></i>
                                                    }
                                                </div>
                                                <div class="testimonial-quote-icon">
                                                    <i class="fas fa-quote-right"></i>
                                                </div>
                                            </div>
                                            <p class="testimonial-text">"@item.Text"</p>
                                            <hr class="testimonial-divider">
                                            <div class="testimonial-footer">
                                                <h6 class="testimonial-name">@item.ClientName</h6>
                                                @if (!string.IsNullOrEmpty(item.ClientTitle))
                                                {
                                                    <p class="testimonial-title">@item.ClientTitle</p>
                                                }
                                                <p class="testimonial-company">@item.CompanyName</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
                @if (testimonials.Count > 3)
                {
                    <button class="carousel-control-prev" type="button" data-bs-target="#testimonialsCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#testimonialsCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                }
            </div>
        </div>
    </section>
}

