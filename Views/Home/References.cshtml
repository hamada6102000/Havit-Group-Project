<!-- Client Testimonials Section -->
@{
    var testimonials = ViewBag.Testimonials as List<HavitGroup.Models.Testimonial>;
}
@if (testimonials != null && testimonials.Any())
{
    <section class="testimonials-section mb-5 py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold mb-3">Client Testimonials</h2>
                <p class="lead text-muted">What our clients say about working with us</p>
            </div>
            <div id="testimonialsCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
                <div class="carousel-inner">
                    @{
                        int itemsPerSlide = 3;
                        int totalSlides = (int)Math.Ceiling((double)testimonials.Count / itemsPerSlide);
                    }
                    @for (int slideIndex = 0; slideIndex < totalSlides; slideIndex++)
                    {
                        <div class="carousel-item @(slideIndex == 0 ? "active" : "")">
                            <div class="row justify-content-center">
                                @{
                                    int startIndex = slideIndex * itemsPerSlide;
                                    int endIndex = Math.Min(startIndex + itemsPerSlide - 1, testimonials.Count - 1);
                                    int itemsInThisSlide = endIndex - startIndex + 1;
                                }
                                @for (int j = startIndex; j <= endIndex; j++)
                                {
                                    var item = testimonials[j];
                                    <div class="col-md-@(itemsInThisSlide == 1 ? "12" : itemsInThisSlide == 2 ? "6" : "4") mb-4">
                                        <div class="testimonial-card h-100">
                                            <div class="testimonial-header">
                                                <div class="testimonial-stars">
                                                    @for (int k = 1; k <= 5; k++)
                                                    {
                                                        <i class="fas fa-star @(k <= item.Rating ? "text-warning" : "text-muted")"></i>
                                                    }
                                                </div>
                                                <div class="testimonial-quote-icon">
                                                    <i class="fas fa-quote-right"></i>
                                                </div>
                                            </div>
                                            <p class="testimonial-text">"@item.Text"</p>
                                            <hr class="testimonial-divider">
                                            <div class="testimonial-footer">
                                                <h6 class="testimonial-name">@item.ClientName</h6>
                                                @if (!string.IsNullOrEmpty(item.ClientTitle))
                                                {
                                                    <p class="testimonial-title">@item.ClientTitle</p>
                                                }
                                                <p class="testimonial-company">@item.CompanyName</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
                @if (testimonials.Count > 3)
                {
                    <button class="carousel-control-prev" type="button" data-bs-target="#testimonialsCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#testimonialsCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                }
            </div>
        </div>
    </section>
}


