<style>
 /* Inline minimal styles for statistics (keeps other sections unchanged) */
 .statistics-section { background: linear-gradient(135deg, #f5f7fa0%, #ffffff100%); }
 .stat-card { background: white; border-radius:15px; box-shadow:04px15px rgba(0,0,0,0.08); transition: transform .3s ease, box-shadow .3s ease; }
 .stat-card:hover { transform: translateY(-5px); box-shadow:08px25px rgba(0,0,0,0.12); }
 .stat-number { font-size:3rem; font-weight:700; color: rgb(41,78,52); line-height:1; }
 .stat-label { font-size:1.05rem; color: #6c757d; font-weight:500; }
 @@media (max-width:768px) { .stat-number { font-size:2.3rem; } }
</style>

<script>
 // Animate statistics numbers on scroll
 document.addEventListener('DOMContentLoaded', function() {
 const statNumbers = document.querySelectorAll('.stat-number');
 if (!('IntersectionObserver' in window)) {
 // Fallback: just set final values
 statNumbers.forEach(el => el.textContent = el.getAttribute('data-target'));
 return;
 }

 const observerOptions = { threshold:0.5, rootMargin: '0px' };
 const observer = new IntersectionObserver(function(entries) {
 entries.forEach(entry => {
 if (entry.isIntersecting) {
 const target = parseInt(entry.target.getAttribute('data-target')) ||0;
 animateValue(entry.target,0, target,1500);
 observer.unobserve(entry.target);
 }
 });
 }, observerOptions);

 statNumbers.forEach(stat => observer.observe(stat));

 function animateValue(element, start, end, duration) {
 let startTimestamp = null;
 const step = (timestamp) => {
 if (!startTimestamp) startTimestamp = timestamp;
 const progress = Math.min((timestamp - startTimestamp) / duration,1);
 const current = Math.floor(progress * (end - start) + start);
 element.textContent = current;
 if (progress <1) {
 window.requestAnimationFrame(step);
 }
 };
 window.requestAnimationFrame(step);
 }
 });
</script>

