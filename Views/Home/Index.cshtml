       document.addEventListener('DOMContentLoaded', function() {
           // === Staggered Animation Observer ===
           const staggerObserver = new IntersectionObserver((entries, observer) => {
               entries.forEach(entry => {
                   if (entry.isIntersecting) {
                       // Find all animatable cards inside this container
                       const cards = entry.target.querySelectorAll('.animate-card');

                       // Loop through them and add the class with a delay
                       cards.forEach((card, index) => {
                           setTimeout(() => {
                               card.classList.add('visible');
                           }, index * 150); // 150ms delay between each item
                       });

                       // Stop watching this container once triggered
                       observer.unobserve(entry.target);
                   }
               });
           }, { threshold: 0.1, rootMargin: "0px 0px -50px 0px" });

           // Observe all grids
           document.querySelectorAll('.animate-grid').forEach(grid => {
               staggerObserver.observe(grid);
           });
       });
