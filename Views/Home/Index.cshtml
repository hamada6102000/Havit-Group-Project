@{
    var testimonials = ViewBag.Testimonials as List<HavitGroup.Models.Testimonial>;
}
@if (testimonials != null && testimonials.Any())
{
    <section class="testimonials-section mb-5 py-5 reveal-section">
        <div class="container">
            <div class="text-center">
                <h2 class="display-5 fw-bold mb-3">What Our Clients Say</h2>
                <p class="lead text-muted">What our clients say about working with us</p>
            </div>
            <div id="testimonialsCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
                <div class="carousel-inner">
                    @{
                        int itemsPerSlide = 3;
                        int totalSlides = (int)Math.Ceiling((double)testimonials.Count / itemsPerSlide);
                    }
                    @for (int slideIndex = 0; slideIndex < totalSlides; slideIndex++)
                    {
                        <div class="carousel-item @(slideIndex == 0 ? "active" : "")">
                            <div class="row justify-content-center animate-grid">
                                @{
                                    int startIndex = slideIndex * itemsPerSlide;
                                    int endIndex = Math.Min(startIndex + itemsPerSlide - 1, testimonials.Count - 1);
                                    int itemsInThisSlide = endIndex - startIndex + 1;
                                }
                                @for (int j = startIndex; j <= endIndex; j++)
                                {
                                    var item = testimonials[j];
                                    <div class="col-md-@(itemsInThisSlide == 1 ? "12" : itemsInThisSlide == 2 ? "6" : "4") mt-5 animate-card">
                                        <div class="testimonial-card h-100">
                                            <div class="testimonial-header">
                                                <div class="testimonial-stars">
                                                    @for (int k = 1; k <= 5; k++)
                                                    {
                                                        <i class="fas fa-star @(k <= item.Rating ? "text-warning" : "text-muted")"></i>
                                                    }
                                                </div>
                                                <div class="testimonial-quote-icon">
                                                    <i class="fas fa-quote-right"></i>
                                                </div>
                                            </div>
                                            <p class="testimonial-text">"@item.Text"</p>
