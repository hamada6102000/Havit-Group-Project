<style>
    /* Image Zoom Out on Hover */
    .why-choose-section img {
        max-height: 550px;
        width: 100%;
        object-fit: cover;
        border-radius: 8px;
        transition: transform 0.5s ease, filter 0.5s ease;
        will-change: transform;
    }

        .why-choose-section img:hover {
            transform: scale(1.05); /* Zoom out */
            filter: brightness(1.05); /* Optional: slightly brighter */
        }

    /* === Hero Carousel with Green Overlay === */
    .hero-carousel-section {
        margin-top: -2.5rem;
        margin-bottom: 0;
        margin-left: -15px;
        margin-right: -15px;
        position: relative;
    }
    
    @@media (min-width: 576px) {
        .hero-carousel-section {
            margin-left: calc((100vw - 540px) / -2);
            margin-right: calc((100vw - 540px) / -2);
        }
    }
    
    @@media (min-width: 768px) {
        .hero-carousel-section {
            margin-left: calc((100vw - 720px) / -2);
            margin-right: calc((100vw - 720px) / -2);
        }
    }
    
    @@media (min-width: 992px) {
        .hero-carousel-section {
            margin-left: calc((100vw - 960px) / -2);
            margin-right: calc((100vw - 960px) / -2);
        }
    }
    
    @@media (min-width: 1200px) {
        .hero-carousel-section {
            margin-left: calc((100vw - 1140px) / -2);
            margin-right: calc((100vw - 1140px) / -2);
        }
    }
    
    @@media (min-width: 1400px) {
        .hero-carousel-section {
            margin-left: calc((100vw - 1320px) / -2);
            margin-right: calc((100vw - 1320px) / -2);
        }
    }

    .carousel-image-wrapper {
        position: relative;
        height: 750px;
        overflow: hidden;
    }

    .carousel-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        display: block;
    }

    /* Green Overlay */
    .carousel-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, rgba(15, 95, 47, 0.80) 0%, rgba(15, 95, 47, 0.84) 100%);
        z-index: 1;
        transition: background 0.8s ease-in-out 0.3s;
    }

    /* Bright green when transitioning between slides */
    .carousel-item.active .carousel-overlay {
        background: linear-gradient(135deg, rgba(70, 160, 105, 0.80) 0%, rgba(55, 140, 85, 0.84) 100%);
        animation: overlayColorTransition 2.2s ease-in-out forwards;
    }

    /* Animation that transitions from bright to dark green with delay */
    @@keyframes overlayColorTransition {
        0% {
            background: linear-gradient(135deg, rgba(70, 160, 105, 0.80) 0%, rgba(55, 140, 85, 0.84) 100%);
        }
        40% {
            background: linear-gradient(135deg, rgba(70, 160, 105, 0.80) 0%, rgba(55, 140, 85, 0.84) 100%);
        }
        100% {
            background: linear-gradient(135deg, rgba(15, 95, 47, 0.80) 0%, rgba(15, 95, 47, 0.84) 100%);
        }
    }

    /* Custom Caption Styling */
    .carousel-caption-custom {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 2;
        text-align: center;
        width: 90%;
        max-width: 900px;
    }

    .caption-content {
        padding: 0 1rem;
    }

    .caption-title {
        font-size: 2rem;
        font-weight: 600;
        color: #ffffff;
        margin-bottom: 1.5rem;
        text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.2);
        line-height: 1.3;
        opacity: 0;
        transform: translateY(30px);
        letter-spacing: 0.3px;
    }

    .carousel-item.active .caption-title {
        animation: slideInUp 0.8s ease-out 0.3s forwards;
    }

    /* Text Animation Keyframes */
    @@keyframes slideInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Custom Carousel Indicators */
    .carousel-indicators-custom {
        position: absolute;
        bottom: 30px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 10px;
        z-index: 3;
    }

    .carousel-indicators-custom button {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        border: 2px solid #ffffff;
        background-color: rgba(255, 255, 255, 0.5);
        opacity: 1;
        transition: all 0.4s ease;
        cursor: pointer;
        padding: 0;
    }

        .carousel-indicators-custom button:hover {
            background-color: rgba(255, 255, 255, 0.8);
            transform: scale(1.2);
        }

    .carousel-indicators-custom button.active {
        background-color: #ffffff;
        width: 40px;
        border-radius: 10px;
        transform: scale(1);
    }

        .carousel-indicators-custom button.active:hover {
            transform: scale(1.05);
        }

    /* Responsive Adjustments */
    @@media (max-width: 768px) {
        .carousel-image-wrapper {
            height: 500px;
        }

        .caption-title {
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }
    }

    @@media (max-width: 575px) {
        .carousel-image-wrapper {
            height: 400px;
        }

        .caption-title {
            font-size: 1.25rem;
        }
    }

    /* What We Offer Section */
    .what-we-offer-section {
        background-color: #ffffff;
    }

    .service-icon-wrapper {
        transition: transform 0.3s ease;
    }

    .card:hover .service-icon-wrapper {
        transform: scale(1.1);
    }

    /* Why Choose Section */
    .why-choose-section {
        background-color: #f8f9fa;
    }

    .feature-icon {
        transition: transform 0.3s ease;
    }

    .feature-icon:hover {
        transform: scale(1.1);
    }

    /* Call to Action Section - Full Width */
    .cta-section {
        margin-left: -15px;
        margin-right: -15px;
        width: calc(100% + 30px);
    }
    
    @@media (min-width: 576px) {
        .cta-section {
            margin-left: calc((100vw - 540px) / -2);
            margin-right: calc((100vw - 540px) / -2);
            width: 100vw;
        }
    }
    
    @@media (min-width: 768px) {
        .cta-section {
            margin-left: calc((100vw - 720px) / -2);
            margin-right: calc((100vw - 720px) / -2);
            width: 100vw;
        }
    }
    
    @@media (min-width: 992px) {
        .cta-section {
            margin-left: calc((100vw - 960px) / -2);
            margin-right: calc((100vw - 960px) / -2);
            width: 100vw;
        }
    }
    
    @@media (min-width: 1200px) {
        .cta-section {
            margin-left: calc((100vw - 1140px) / -2);
            margin-right: calc((100vw - 1140px) / -2);
            width: 100vw;
        }
    }
    
    @@media (min-width: 1400px) {
        .cta-section {
            margin-left: calc((100vw - 1320px) / -2);
            margin-right: calc((100vw - 1320px) / -2);
            width: 100vw;
        }
    }

    @@media (max-width: 575px) {
        .carousel-image {
            max-height: 400px;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // === Carousel Indicator Animation ===
        const serviceCarousel = document.getElementById('serviceCarousel');
        if (serviceCarousel) {
            // Listen for Bootstrap carousel slide events
            serviceCarousel.addEventListener('slide.bs.carousel', function (e) {
                // Get all indicator buttons
                const indicators = document.querySelectorAll('.carousel-indicators-custom button');
                
                // Remove active class from all indicators
                indicators.forEach(indicator => {
                    indicator.classList.remove('active');
                });
                
                // Add active class to the indicator for the slide we're going to
                if (indicators[e.to]) {
                    indicators[e.to].classList.add('active');
                }
            });
        }
    });
</script>
