    .carousel-image-wrapper {
        position: relative;
        height: 750px;
        overflow: hidden;
    }

    .carousel-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        display: block;
    }

    /* Green Overlay */
    .carousel-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, rgba(15, 95, 47, 0.80) 0%, rgba(15, 95, 47, 0.84) 100%);
        z-index: 1;
        transition: background 0.8s ease-in-out 0.3s;
    }

    /* Bright green when transitioning between slides */
    .carousel-item.active .carousel-overlay {
        background: linear-gradient(135deg, rgba(70, 160, 105, 0.80) 0%, rgba(55, 140, 85, 0.84) 100%);
        animation: overlayColorTransition 2.2s ease-in-out forwards;
    }

    /* Animation that transitions from bright to dark green with delay */
    @@keyframes overlayColorTransition {
        0% {
            background: linear-gradient(135deg, rgba(70, 160, 105, 0.80) 0%, rgba(55, 140, 85, 0.84) 100%);
        }
        40% {
            background: linear-gradient(135deg, rgba(70, 160, 105, 0.80) 0%, rgba(55, 140, 85, 0.84) 100%);
        }
        100% {
            background: linear-gradient(135deg, rgba(15, 95, 47, 0.80) 0%, rgba(15, 95, 47, 0.84) 100%);
        }
    }

    /* Custom Caption Styling */
    .carousel-caption-custom {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 2;
        text-align: center;
        width: 90%;
        max-width: 900px;
    }

    .caption-content {
        padding: 0 1rem;
    }

    .caption-title {
        font-size: 2rem;
        font-weight: 600;
        color: #ffffff;
        margin-bottom: 1.5rem;
        text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.2);
        line-height: 1.3;
        opacity: 0;
        transform: translateY(30px);
        letter-spacing: 0.3px;
    }

    .carousel-item.active .caption-title {
        animation: slideInUp 0.8s ease-out 0.3s forwards;
    }

    /* Text Animation Keyframes */
    @@keyframes slideInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Custom Carousel Indicators */
    .carousel-indicators-custom {
        position: absolute;
        bottom: 30px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 10px;
        z-index: 3;
    }

    .carousel-indicators-custom button {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        border: 2px solid #ffffff;
        background-color: rgba(255, 255, 255, 0.5);
        opacity: 1;
        transition: all 0.4s ease;
        cursor: pointer;
        padding: 0;
    }

        .carousel-indicators-custom button:hover {
            background-color: rgba(255, 255, 255, 0.8);
            transform: scale(1.2);
        }

    .carousel-indicators-custom button.active {
        background-color: #ffffff;
        width: 40px;
        border-radius: 10px;
        transform: scale(1);
    }

        .carousel-indicators-custom button.active:hover {
            transform: scale(1.05);
        }

    /* Responsive Adjustments */
    @@media (max-width: 768px) {
