@{
    ViewData["Title"] = "About Us";
}

<!-- Hero Image Carousel Section -->
@{
    var aboutImages = ViewBag.AboutImages as List<HavitGroup.Models.AboutImage>;
}
@if (aboutImages != null && aboutImages.Any())
{
    <section class="hero-carousel-section mb-5">
        <div id="aboutCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="5000" data-bs-wrap="true">
            <div class="carousel-inner">
                @for (int i = 0; i < aboutImages.Count; i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <div class="carousel-image-wrapper">
                            <img src="@aboutImages[i].ImagePath" class="d-block w-100 carousel-image" alt="@(aboutImages[i].AltText ?? "Havit Group")">
                            <div class="carousel-overlay"></div>
                        </div>
                        @if (!string.IsNullOrWhiteSpace(aboutImages[i].AltText))
                        {
                            <div class="carousel-caption-custom">
                                <div class="caption-content">
                                    <h2 class="caption-title">@aboutImages[i].AltText</h2>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
            
            <!-- Carousel Indicators -->
            <div class="carousel-indicators-custom">
                @for (int i = 0; i < aboutImages.Count; i++)
                {
                    <button type="button" data-bs-target="#aboutCarousel" data-bs-slide-to="@i" 
                            class="@(i == 0 ? "active" : "")" aria-label="Slide @(i + 1)"></button>
                }
            </div>
        </div>
    </section>
}

<!-- Mission and Vision Section -->
<section class="mission-vision-section mb-5 py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-6">
                <div class="mission-card h-100 p-4">
